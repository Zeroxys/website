---
interface Props {
  title: string;
  description: string;
  date: string;
  skills: string[];
  activities: string[];
}


const { title, description, skills, date, activities=[] } = Astro.props;
---

<section class="bg-transparent rounded-r-lg overflow-hidden shadow-md w-full md:w-1/2 mt-12">
  <div class="p-6 md:p-8 custom-border">
    <h2 class="text-xl md:text-2xl lg:text-3xl font-semibold text-gray-800 mb-2">{title}</h2>
    <p class="text-sm text-gray-500 mb-4">{date}</p>
    <p class="text-base md:text-lg lg:text-xl text-gray-600 mb-6">{description}</p>
    <div class="mb-4">
      <h3 class="text-lg font-semibold text-gray-800 mb-2">Actividades Realizadas</h3>
      <ul class="list-disc pl-4">
        {activities.map((activity) => (
          <li class="text-gray-600 mb-2">{activity}</li>
        ))}
      </ul>
    </div>
    <div class="flex flex-wrap gap-2">
      {skills.map((skill) => {
        return <span class="bg-gradient-to-r from-purple-500 to-pink-400 text-white px-2 py-1 rounded text-xs md:text-sm lg:text-base">{skill}</span>;
      })}
    </div>
  </div>
</section>




<style>
.custom-border {
  border: 1px solid;
  border-image: linear-gradient(to right, #8B5CF6, #EC4899);
  border-image-slice: 1;
}
</style>
