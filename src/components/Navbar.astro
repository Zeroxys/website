import GitHub from "../components/icons/GitHub.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Button from  "../components/Button.astro"
---

<nav class="flex flex-col sm:flex-row w-full h-20 px-20 bg-transparent">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <a href="/" class="text-gray-300 hover:text-white mr-4">Inicio</a>
      <a href="/about" class="text-gray-300 hover:text-white mr-4">Acerca de</a>
      <a href="/projects" class="text-gray-300 hover:text-white">Proyectos</a>
    </div>

    <diB class="flex items-center">
      <a
        href="https://github.com/Zeroxys"
        class="text-gray-300 hover:text-white mr-4"
        target="_blank"
        rel="noopener noreferrer"
      >
        <GitHub class="color-white w-8 h-8" />
      </a>

      <a
        href="https://www.linkedin.com/in/miguel-angel-zavala-castillo/"
        class="text-gray-300 hover:text-white mr-4"
        target="_blank"
        rel="noopener noreferrer"
      >
        <LinkedIn class="text-white w-8 h-8" />
      </a>

      <Button
        href="/cv/miguel-angel-zavala-cv.pdf"
        class="bg-gradient-to-r from-purple-500 to-pink-400 text-white px-4 py-2 rounded-md shadow-md hover:opacity-90"
