---
import { getLangFromUrl } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);

const path = `/Miguel_Resume_${lang}.pdf`
const fileName = `Miguel_Resume_${lang}.pdf`
---
<a
  class="bg-gradient-to-r from-purple-500 to-pink-400 text-white px-4 py-2 rounded-md shadow-md hover:opacity-90"
  href={path}
  download={fileName}
>
  <slot/>
</a>
 